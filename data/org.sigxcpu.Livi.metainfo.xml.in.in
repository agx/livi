<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>@APP_ID@</id>
  <name>Light Video</name>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>GPL-3.0-or-later</project_license>
  <description>
    <p>
      A minimalistic GTK4 and gstreamer based video player for mobile phones like the Librem 5 aiming for minimal battery usage.
    </p>
    <p>
      It supports:
    </p>
    <ul>
      <li>Inhibiting suspend/idle when playing video</li>
      <li>Stopping video playback on (i.e. power button toggled) blank</li>
      <li>Registering as default video player in GNOME control center</li>
      <li>An indicator whether hardware accleration is in use</li>
    </ul>
  </description>
  <summary>A simple GTK4 based video player for mobile phones</summary>

  <url type="homepage">https://gitlab.gnome.org/guidog/livi</url>
  <url type="bugtracker">https://gitlab.gnome.org/guidog/livi/issues</url>
  <url type="vcs-browser">https://gitlab.gnome.org/guidog/livi</url>
  <url type="translate">https://gitlab.gnome.org/guidog/livi/-/tree/main/po</url>

  <developer id="org.sigxcpu">
    <name>Guido Günther</name>
  </developer>

  <launchable type="desktop-id">@APP_ID@.desktop</launchable>

  <categories>
    <category>Video</category>
  </categories>

  <screenshots>
    <screenshot type="default">
      <caption>Full screen portrait mode</caption>
      <image>https://gitlab.gnome.org/guidog/livi/-/raw/main/screenshots/landscape-fullscreen.png?inline=false</image>
    </screenshot>
  </screenshots>

  <content_rating type="oars-1.1"/>

  <requires>
    <display_length compare="ge">360</display_length>
  </requires>
  <recommends>
    <control>keyboard</control>
    <control>pointing</control>
    <control>touch</control>
  </recommends>

  <releases>
    <release version="0.2.0" date="2024-05-25">
      <description>
        <p>New features and bug fixes</p>
        <ul>
          <li>Allow to list recent videos on the command line</li>
          <li>Fix recent list sorting</li>
        </ul>
      </description>
    </release>

    <release version="0.1.0" date="2024-03-14">
      <description>
        <p>New features and playback improvements</p>
        <ul>
          <li>Improve hardware accelerated playback</li>
          <li>Start videos at their last position</li>
          <li>Allow to paste URLs</li>
        </ul>
      </description>
    </release>

    <release version="0.0.6" date="2024-01-19">
      <description>
        <p>New features and visual improvements</p>
        <ul>
          <li>Allow to select subtitle and audio streams</li>
          <li>Add file open dialog</li>
          <li>Add keyboard shortcuts dialog</li>
          <li>Better adjust controls to wide and narrow layouts</li>
        </ul>
      </description>
    </release>

    <release version="0.0.5" date="2023-12-25">
      <description>
        <p>Minor improvements</p>
        <ul>
          <li>More visual feedback on state changes</li>
          <li>Rename from µPlayer to Light Video</li>
        </ul>
      </description>
    </release>

    <release version="0.0.4" date="2023-04-28">
      <description>
        <p>Minor improvements</p>
        <ul>
          <li>Fix possible crash on shutdown</li>
          <li>Allow to set playback speed</li>
        </ul>
      </description>
    </release>

    <release version="0.0.3" date="2023-03-31">
      <description>Update to GNOME 44, detect more hardware accelerators</description>
    </release>

    <release version="0.0.2" date="2021-07-30">
      <description>Add some keyboard shortcuts</description>
    </release>

    <release version="0.0.1" date="2021-07-07">
      <description>Initial release</description>
    </release>
  </releases>

</component>
